{
    "latex-workshop.latex.recipes": [
        {
            "name": "xelatex",
            "tools": [
                "xelatex"
            ]
        },
        {   "name": "xe->bib->xe->xe",
            "tools": [
                "xelatex-no-pdf",
                "bibtex",
                "xelatex",
                "xelatex"
            ]
        }
    ],
    "latex-workshop.latex.tools": [
        {
            "name": "xelatex",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "mythesis"
            ]
        },
        {
            "name": "xelatex-no-pdf",
            "command": "xelatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-no-pdf",
                "mythesis"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "mythesis"
            ]
        },
        {
            "name": "bibtex",
            "command": "biber",
            "args": [
                "mythesis"
            ]
        }
    ],
    "latex-workshop.latex.clean.enabled": true
}